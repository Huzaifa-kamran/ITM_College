@{
	Layout = "_AdminLayout";
}
@model ITM_College.Models.FacultyAndDepartment;
<!--**********************************
		 Content body start
	 ***********************************-->
<div class="content-body">

	<!-- row -->
	<div class="container-fluid">

		<div class="row page-titles mx-0">
			<div class="col-sm-6 p-md-0">
				<div class="welcome-text">
					<h4>Add Faculty</h4>
				</div>
			</div>
			<div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
				<ol class="breadcrumb">

					<li class="breadcrumb-item"><a asp-action="AddFaculty" asp-controller="Admin">Faculties</a></li>
					<li class="breadcrumb-item active"><a href="javascript:void(0)">Add Faculty</a></li>
				</ol>
			</div>
		</div>

		<div class="row">
			<div class="col-xl-12 col-xxl-12 col-sm-12">
				<div class="card">
					<div class="card-header">
						<h5 class="card-title">Basic Info</h5>
					</div>
					<div class="card-body">
						<form method="post" id="addStaffForm" enctype="multipart/form-data">
							<div class="row">
								<div class="col-sm-6">
									<div class="form-group">
										<label class="form-label" for="first_name">Faculty Name</label>
										<input placeholder="Enter Faculty Name" asp-for="FacultyTable.FacultyName" id="faculty_name" type="text"
											   class="form-control" required>
									</div>
								</div>

								<div class="col-sm-6">
									<div class="form-group">
										<label class="form-label" for="email_here">Email Here</label>
										<input placeholder="Email Here" asp-for="FacultyTable.FacultyEmail" id="email_here" type="email" class="form-control" required>
									</div>
								</div>

								<div class="col-sm-6">
									<div class="form-group">
										<label class="form-label" for="password">Password</label>
										<div class="input-group pass-group">
											<input placeholder="Password" asp-for="FacultyTable.FacultyPassword" id="password" type="password" class="form-control pass-input" required>
											<span class="input-group-text pass-handle">
												<i class="fa fa-eye-slash"></i>
												<i class="fa fa-eye"></i>
											</span>
										</div>
									</div>
								</div>

								<div class="col-sm-6">
									<div class="form-group">
										<label class="form-label">Gender</label>
										<select asp-for="FacultyTable.Gender" class="form-control">
											<option value="1">Male</option>
											<option value="2">Female</option>
										</select>
									</div>
								</div>

								<div class="col-sm-6">
									<div class="form-group">
										<label class="form-label">Department</label>
										<select asp-for="FacultyTable.FacultyDepartment" class="form-control">

											@foreach (var temp in Model.Departments)
											{
												<option value="@temp.DepartmentId">@temp.DepartmentName</option>
											}

										</select>

									</div>
								</div>


								<div class="col-lg-6 col-md-6">
									<div class="form-group fallback w-100">
										<label class="form-label">Faculty Image</label>
										<input type="file" name="img" class="form-control" required>
									</div>
								</div>
								<div class="col-lg-12 col-md-12 col-sm-12">
									<button type="submit" class="btn btn-primary">Submit</button>
									<button type="reset" class="btn btn-danger light">Reset</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



<!--**********************************
	Content body end
***********************************-->
