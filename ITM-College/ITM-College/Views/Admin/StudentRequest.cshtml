@{
	Layout = "_AdminLayout";
}
@model IEnumerable<StudentCourseRegistration>;
<!--**********************************
		  Content body start
	  ***********************************-->
<div class="content-body">
	@if (ViewBag.message != null)
	{

		<div class="alert alert-success solid alert-right-icon alert-dismissible fade show">
			<span><i class="mdi mdi-check"></i></span>
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="btn-close">
			</button> @ViewBag.message
		</div>
	}
	@if (ViewBag.error != null)
	{
		<div class="alert alert-danger solid alert-right-icon alert-dismissible fade show">
			<span><i class="mdi mdi-alert"></i></span>
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="btn-close">
			</button>
			<strong>@ViewBag.error</strong>
		</div>
	}

	<!-- row -->
	<div class="container-fluid">

		<div class="row page-titles mx-0">
			<div class="col-sm-6 p-md-0">
				<div class="welcome-text">
					<h4>All Request</h4>
				</div>
			</div>
			<div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
				<ol class="breadcrumb">

					<li class="breadcrumb-item"><a href="javascript:void(0);">Students</a></li>
					<li class="breadcrumb-item active"><a href="javascript:void(0);">All Students</a></li>
				</ol>
			</div>
		</div>

		<div class="row">

			<div class="col-lg-12">
				<div class="row">
					<div class="show col-lg-12">
						<div class="card">
							<div class="card-header">
								<h4 class="card-title">All Request</h4>

							</div>
							<div class="card-body">
								@if (Model.Any())
								{
									<div class="table-responsive">
										<table id="example3" class="display text-nowrap table" style="min-width: 845px">
											<thead>
												<tr>
													<th>Profile</th>
													<th>Name</th>
													<th>Email</th>
													<th>Courses</th>
													<th>Tracking Code</th>
													<th>Action</th>
												</tr>
											</thead>
											<tbody>
												@foreach (var item in Model)
												{


													<tr>
														<td><a asp-controller="Admin" asp-action="StudentDetail"                                   asp-route-id="@item.StudentId">@item.StudentName</a></td>
														<td><a asp-controller="Admin" asp-action="StudentDetail" asp-route-id="@item.StudentId">@item.Student.StudentEmail</a></td>
														<td><a asp-controller="Admin" asp-action="StudentDetail" asp-route-id="@item.StudentId">@item.AddmissionForNavigation.CourseName</a></td>

														<td><a asp-controller="Admin" asp-action="StudentDetail" asp-route-id="@item.StudentId">@item.TrackingId</a></td>
														<td>
															@if (item.Status == 1)
															{
																<a asp-controller="Admin" asp-action="StudentDetail" asp-route-id="@item.StudentId">
																	<span class="badge badge-rounded badge-warning">Pending</span>
																</a>
															}
														</td>
														<td>
															<a asp-controller="Admin" asp-action="ApproveStudent" asp-route-id="@item.Id"
															   class="btn btn-primary btn-sm">Approve</a>

															<a asp-controller="Admin" asp-action="RejectStudent" asp-route-id="@item.Id"
															   class="btn btn-danger btn-sm">Reject</a>
														</td>
													</tr>

												}

											</tbody>
										</table>
									</div>
								}
								else
								{
				// Model is empty or null
									<h2>No Students Found</h2>
								}
							</div>
						</div>
					</div>


				</div>
			</div>
		</div>

	</div>
</div>



<!--**********************************
	Content body end
***********************************-->
