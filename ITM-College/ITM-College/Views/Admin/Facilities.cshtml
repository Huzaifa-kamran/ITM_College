@{
	Layout = "_AdminLayout";
}
@model IEnumerable<Facility>;
<!--**********************************
		  Content body start
	  ***********************************-->
<div class="content-body">
	@if (ViewBag.message != null)
	{

		<div class="alert alert-success solid alert-right-icon alert-dismissible fade show">
			<span><i class="mdi mdi-check"></i></span>
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="btn-close">
			</button> @ViewBag.message
		</div>
	}
	<!-- row -->
	<div class="container-fluid">

		<div class="row page-titles mx-0">
			<div class="col-sm-6 p-md-0">
				<div class="welcome-text">
					<h4>All Facilities</h4>
				</div>
			</div>
			<div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
				<ol class="breadcrumb">

					<li class="breadcrumb-item"><a href="javascript:void(0);">Facilities</a></li>
					<li class="breadcrumb-item active"><a href="javascript:void(0);">All Facilities</a></li>
				</ol>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-12">
				<div class="row">
					<div class="show col-lg-12">
						<div class="card">
							<div class="card-header">
								<h4 class="card-title">All Facilities  </h4>
								<a asp-controller="Admin" asp-action="AddFacility" class="btn btn-primary">+ Add new</a>
							</div>
							<div class="card-body">
								@if (Model.Any())
								{


									<div class="table-responsive">
										<table id="example3" class="display text-nowrap table" style="min-width: 845px">
											<thead>
												<tr>
													<th>Image</th>
													<th>Name</th>
													<th>Description</th>
													<th>Action</th>
												</tr>
											</thead>
											<tbody>
												@foreach (var temp in Model)
												{
													<tr>
														<td><img class="rounded-circle" width="35" src="~/@temp.FacilityImg" alt=""></td>
														<td>@temp.FacilityName</td>
														<td>@temp.FacilityDesc</td>
														<td>
															<a asp-controller="Admin" asp-action="UpdateFacility" asp-route-id="@temp.Id" class="btn btn-xs sharp btn-primary"><i class="fa fa-pencil"></i></a>
															<a asp-controller="Admin" asp-action="DeleteFacility" asp-route-id="@temp.Id" class="btn btn-xs sharp btn-danger"><i class="fa fa-trash"></i></a>
														</td>
													</tr>
												}



											</tbody>
										</table>
									</div>
								}
								else
								{
									<h2>No Facility Found</h2>
								}
							</div>
						</div>
					</div>


				</div>
			</div>
		</div>

	</div>
</div>



<!--**********************************
	Content body end
***********************************-->
