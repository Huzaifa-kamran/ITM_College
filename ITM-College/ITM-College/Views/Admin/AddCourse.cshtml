@{
	Layout = "_AdminLayout";
}
@model ITM_College.Models.CourseFacultyView;
<!--**********************************
	   Content body start
   ***********************************-->
<div class="content-body">
	<!-- row -->
	<div class="container-fluid">

		<div class="row page-titles mx-0">
			<div class="col-sm-6 p-md-0">
				<div class="welcome-text">
					<h4>Add Course</h4>
				</div>
			</div>
			<div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
				<ol class="breadcrumb">

					<li class="breadcrumb-item"><a href="javascript:void(0);">Courses</a></li>
					<li class="breadcrumb-item active"><a href="javascript:void(0);">Add Course</a></li>
				</ol>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-12">
				<div class="card">
					<div class="card-header">
						<h4 class="card-title">Courses Details</h4>
					</div>
					<div class="card-body">
						<form method="post" enctype="multipart/form-data">
							<div class="row">
								<div class="col-sm-6">
									<div class="form-group">
										<label class="form-label" for="Course_Name">Course Name</label>
										<input placeholder="Course Name" asp-for="CourseTable.CourseName" id="Course_Name" type="text" class="form-control" required>
									</div>
								</div>
								<div class="col-sm-6">
									<div class="form-group">
										<label class="form-label" for="Professor_Name">Faculty Name</label>
										<select asp-for="CourseTable.FacultyId" class="form-control">
											@foreach (var temp in Model.faculties)
											{
												<option value="@temp.FacultyId">@temp.FacultyName</option>
											}
										</select>
									</div>
								</div>
								<div class="col-lg-12 col-md-12 col-sm-12">
									<div class="form-group">
										<label class="form-label" for="Course_Details">Course Details</label>
										<textarea placeholder="Course Details" asp-for="CourseTable.CourseDesc" id="Course_Details" class="form-control" rows="5" required></textarea>
									</div>
								</div>

								<div class="col-sm-6">
									<div class="form-group">
										<label class="form-label" for="Course_Duration">No. Of Lectures</label>
										<input placeholder="Course Duration" asp-for="CourseTable.CourseDuration" id="Course_Duration" type="text" class="form-control" required>
									</div>
								</div>

								<div class="col-lg-6 col-md-6">
									<div class="form-group fallback w-100">
										<label class="form-label d-block" for="Course_Photo">Course Image</label>
										<input id="Course_Photo" type="file" class="form-control" name="img" required>
									</div>
								</div>
								<div class="col-lg-12 col-md-12 col-sm-12">
									<button type="submit" class="btn btn-primary">Add Course</button>
									<button type="reset" class="btn btn-danger light">Cancel</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



<!--**********************************
	Content body end
***********************************-->
