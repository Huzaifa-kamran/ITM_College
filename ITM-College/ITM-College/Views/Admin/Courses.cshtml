@{
	Layout = "_AdminLayout";
}
@model IEnumerable<Course>;
<!--**********************************
		  Content body start
	  ***********************************-->
<div class="content-body">
	@if (ViewBag.message != null)
	{

		<div class="alert alert-success solid alert-right-icon alert-dismissible fade show">
			<span><i class="mdi mdi-check"></i></span>
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="btn-close">
			</button> @ViewBag.message
		</div>
	}
	@if (ViewBag.error != null)
	{
		<div class="alert alert-danger solid alert-right-icon alert-dismissible fade show">
			<span><i class="mdi mdi-alert"></i></span>
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="btn-close">
			</button>
			<strong>@ViewBag.error</strong>
		</div>
	}

	<!-- row -->
	<div class="container-fluid">

		<div class="row page-titles mx-0">
			<div class="col-sm-6 p-md-0">
				<div class="welcome-text">
					<h4>All Courses</h4>
				</div>
			</div>
			<div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
				<ol class="breadcrumb">

					<li class="breadcrumb-item"><a href="javascript:void(0);">Courses</a></li>
					<li class="breadcrumb-item active"><a href="javascript:void(0);">All Courses</a></li>
				</ol>
			</div>
		</div>

		<div class="row">
	
			<div class="col-lg-12">
				<div class="row">
					<div class="col-lg-12">
						<div class="card">
							<div class="card-header">
								<h4 class="card-title">All Courses</h4>
								<a asp-controller="Admin" asp-action="AddCourse" class="btn btn-primary">+ Add new</a>
							</div>
							<div class="card-body">
								@if (Model.Any())
								{


									<div class="table-responsive">
										<table id="example3" class="display text-nowrap table" style="min-width: 845px">
											<thead>
												<tr>
													<th>Image</th>
													<th>Name</th>
													<th>Faculty</th>
													<th>Department</th>
													<th>Lectures</th>
													<th>Description</th>
													<th>Action</th>
												</tr>
											</thead>
											<tbody>
												@foreach (var temp in Model)
												{
													<tr>
														<td>
															<a asp-controller="Admin" asp-action="CourseDetail" asp-route-id="@temp.CourseId">
																<img class="rounded-circle" width="35" src="~/@temp.CourseImg" alt="">
															</a>
														</td>
														<td>
															<a asp-controller="Admin" asp-action="CourseDetail" asp-route-id="@temp.CourseId">@temp.CourseName</a>
														</td>
														<td>
															<a asp-controller="Admin" asp-action="CourseDetail" asp-route-id="@temp.CourseId">@temp.Faculty.FacultyName</a>
														</td>
														<td><a asp-controller="Admin" asp-action="CourseDetail" asp-route-id="@temp.CourseId">@temp.Faculty.FacultyDepartmentNavigation.DepartmentName</a>	</td>
														<td><a asp-controller="Admin" asp-action="CourseDetail" asp-route-id="@temp.CourseId">@temp.CourseDuration</a></td>
														<td><a asp-controller="Admin" asp-action="CourseDetail" asp-route-id="@temp.CourseId">@temp.CourseDesc</a></td>
														<td>
															<a asp-controller="Admin" asp-action="UpdateCourse" asp-route-id="@temp.CourseId" class="btn btn-xs sharp btn-primary"><i class="fa fa-pencil"></i></a>
															<a asp-controller="Admin" asp-action="DeleteCourse" asp-route-id="@temp.CourseId" class="btn btn-xs sharp btn-danger"><i class="fa fa-trash"></i></a>
														</td>
													</tr>
												}



											</tbody>
										</table>
									</div>
								}
								else
								{
									<h2>No Course Found</h2>
								}
							</div>
						</div>
					</div>

				</div>
			</div>
		</div>

	</div>
</div>



<!--**********************************
	Content body end
***********************************-->
