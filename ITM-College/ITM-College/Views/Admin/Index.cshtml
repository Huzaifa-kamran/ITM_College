@{
	Layout = "_AdminLayout";
}

@model ITM_College.Models.DashboardData;
<div class="content-body">
	@if (ViewBag.message != null)
	{

		<div class="alert alert-success solid alert-right-icon alert-dismissible fade show">
			<span><i class="mdi mdi-check"></i></span>
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="btn-close">
			</button> @ViewBag.message
		</div>
	}

	@if (ViewBag.error != null)
	{
		<div class="alert alert-danger solid alert-right-icon alert-dismissible fade show">
			<span><i class="mdi mdi-alert"></i></span>
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="btn-close">
			</button>
			<strong>@ViewBag.error</strong>
		</div>
	}
	<!-- row -->
	<div class="container-fluid">

		<div class="row">
			<div class="col-xl-12 col-xxl-12 col-sm-12">
				<div class="row">
					<div class="col-xl-6 col-xxl-6 col-sm-6">
						<div class="widget-stat card">
							<div class="card-body">
								<h4 class="card-title">Total Students</h4>
								<h3 class="fw-bold">@Model.StudentsCount</h3>
								<div class="progress mb-2">
									<div class="progress-bar progress-animated bg-primary" style="width: 80%"></div>
								</div>
							
							</div>
						</div>
					</div>
					<div class="col-xl-6 col-xxl-6 col-sm-6">
						<div class="widget-stat card">
							<div class="card-body">
								<h4 class="card-title">Total Faculties</h4>
								<h3 class="fw-bold">@Model.FacultiesCount</h3>
								<div class="progress mb-2">
									<div class="progress-bar progress-animated bg-danger" style="width: 50%"></div>
								</div>
								
							</div>
						</div>
					</div>
					<div class="col-xl-6 col-xxl-6 col-sm-6">
						<div class="widget-stat card">
							<div class="card-body">
								<h4 class="card-title">Total Course</h4>
								<h3 class="fw-bold">@Model.CoursesCount</h3>
								<div class="progress mb-2">
									<div class="progress-bar progress-animated bg-red" style="width: 76%"></div>
								</div>
			
							</div>
						</div>
					</div>
					<div class="col-xl-6 col-xxl-6 col-sm-6">
						<div class="widget-stat card">
							<div class="card-body">
								<h4 class="card-title">Total Departments</h4>
								<h3 class="fw-bold">@Model.DepartmentsCount</h3>
								<div class="progress mb-2">
									<div class="progress-bar progress-animated bg-success" style="width: 30%"></div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="col-lg-4 col-md-12">
				<div class="card">
					<div class="card-header">
						<h4 class="card-title">Faculty List</h4>
					</div>
					@if(Model.Faculties.Any()){
					<div class="card-body dz-scroll" >

						@foreach (var temp in Model.Faculties)
						{
							
						
						<div class="media mb-3 align-items-center border-bottom pb-3">
							<img class="me-3 rounded-circle" alt="image" width="50" src="~/@temp.FacultyImg">
							<div class="media-body">
								<h5 class="mb-0 text-pale-sky">@temp.FacultyName</h5>
								<small class="text-primary mb-0">@temp.FacultyDepartmentNavigation.DepartmentName</small>
							</div>
						</div>
						}


					</div>
					<div class="card-footer border-0 pt-2">
						<div class="text-center">
							<a asp-controller="Admin" asp-action="Faculty" class="btn btn-primary">View All</a>
						</div>
					</div>
					}
					else
					{
					// Model is empty or null
						<h4 class="ms-3 p-4">No Faculty Found</h4>
					}
				</div>
			</div>




			<div class="col-xl-8 col-lg-8 col-xxl-8 col-md-12">
				<div class="card">
					<div class="card-header">
						<h4 class="card-title">Student Request</h4>
					</div>
					<div class="card-body">
						@if(Model.newStd.Any()){
						<div class="table-responsive recentOrderTable text-nowrap">
							<table class="table table-hover table-responsive-md">
								<thead>

									<tr>
										<th scope="col">Student Name</th>
										<th scope="col">Email</th>
										<th scope="col">Course</th>
										<th scope="col">Status</th>
										<th scope="col" class="text-center">Actions</th>
									</tr>


								</thead>
								<tbody>

									 @foreach (var item in Model.newStd)
									{

									
									<tr>
											<td>@item.StudentName</td>
											<td>@item.Student.StudentEmail</td>
										    <td>@item.AddmissionForNavigation.CourseName</td>
											<td>@if(item.Status == 1)
												{
													<span class="badge badge-rounded badge-warning">Pending</span>
												}
											</td>
										<td>
												<a asp-controller="Admin" asp-action="ApproveStudent" asp-route-id="@item.Id" 
												class="btn btn-primary btn-sm">Approve</a>

												<a asp-controller="Admin" asp-action="RejectStudent" asp-route-id="@item.Id" 
												class="btn btn-danger btn-sm">Reject</a>
										</td>
									</tr>

									} 

								</tbody>
							</table>
						</div>
						}
						else
						{
						// Model is empty or null
							<h4 class="ms-3 p-2">No Request Found</h4>
						}
					</div>
				</div>
			</div>

