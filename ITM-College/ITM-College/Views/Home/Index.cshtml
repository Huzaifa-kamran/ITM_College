@model ITM_College.Models.VisitorIndex;
<div class="main-wrapper">

    <!-- start slideshow-->
    <div class="container-fluid full-screen">
        <div class="row slider-fade">
            <div class="owl-carousel owl-theme">
                <div class="text-center item bg-img" data-overlay-dark="6" data-background="clientcss/img/slider/slide1.jpg">
                    <div class="display-table height-100 position-relative caption">
                        <div class="display-table-cell vertical-align-middle">
                            <h1 class="text-white">The Best College</h1>
                            <p class="text-white margin-40px-bottom md-margin-30px-bottom xs-margin-25px-bottom center-col">Many colleges and universities have designated mottos that represent the culture of that institution identify themselves in a few words.</p>



                        </div>
                    </div>
                </div>
                <div class="text-center item bg-img" data-overlay-dark="6" data-background="clientcss/img/slider/slide2.jpg">
                    <div class="display-table height-100 position-relative caption">
                        <div class="display-table-cell vertical-align-middle">
                            <h1 class="text-white">Education For Better</h1>
                            <p class="text-white margin-40px-bottom md-margin-30px-bottom xs-margin-25px-bottom center-col">Many colleges and universities have designated mottos that represent the culture of that institution identify themselves in a few words.</p>



                        </div>
                    </div>
                </div>
                <div class="text-center item bg-img" data-overlay-dark="6" data-background="clientcss/img/slider/slide3.jpg">
                    <div class="display-table height-100 position-relative caption">
                        <div class="display-table-cell vertical-align-middle">
                            <h1 class="text-white">Achieving Knowledge</h1>
                            <p class="text-white margin-40px-bottom md-margin-30px-bottom xs-margin-25px-bottom center-col">Many colleges and universities have designated mottos that represent the culture of that institution identify themselves in a few words.</p>



                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- end slideshow-->
    <!-- start facility section -->
    <section class="no-padding-top facility-box facility-wrapper ">
        <div class="container">
            <div class="row facility-block">
                <div class="col-12">
                    <div class="owl-carousel owl-theme">

                        <div class="step bg-blue text-center">

                            <i class="ti-eraser"></i>
                            <h4 class="step-title">Accounting & Finance</h4>

                        </div>
                        <div class="step bg-sky text-center">

                            <i class="ti-cloud-down"></i>
                            <h4 class="step-title">Anatomy & Physiology</h4>

                        </div>
                        <div class="step bg-green text-center">

                            <i class="ti-check-box"></i>
                            <h4 class="step-title">Geography & Sciences</h4>

                        </div>
                        <div class="step bg-pink text-center">

                            <i class="ti-mouse"></i>
                            <h4 class="step-title">Architecture & Design</h4>

                        </div>
                        <div class="step bg-yellow text-center">

                            <i class="ti-bar-chart-alt"></i>
                            <h4 class="step-title">Theology & Religious</h4>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- end facility section -->
    <!-- start about us section -->
    <section class="about-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-5 col-sm-12 order-2 order-lg-1">
                    <div class="padding-50px-right md-padding-40px-right sm-no-padding-right">
                        <h3 class="font-weight-500 font-size32 md-font-size28 sm-font-size26 xs-font-size24 margin-30px-bottom md-margin-25px-bottom sm-margin-20px-bottom text-theme-color">Welcome to our campus</h3>
                        <p class="margin-30px-bottom md-margin-25px-bottom sm-margin-20px-bottom font-size16 line-height-30">Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled unchanged.</p>
                        <ul class="list-style5">
                            <li>Building our community</li>
                            <li>Book, library and store</li>
                        </ul>
                        <a class="butn fill margin-30px-top md-margin-25px-top sm-margin-20px-top" asp-action="About" asp-controller="Home">Read More <i class="fas fa-long-arrow-alt-right margin-10px-left"></i></a>
                    </div>
                </div>

                <div class="col-lg-7 col-sm-12 order-1 order-lg-2 sm-margin-40px-bottom xs-margin-30px-bottom">
                    <div class="row">
                        <div class="col-md-7 xs-margin-25px-bottom">
                            <div class="xs-text-center">
                                <img src="~/clientcss/img/content/about01.jpg" alt="" class="border-radius-6" />
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="about-img">
                                <img src="~/clientcss/img/content/about02.jpg" alt="" class="margin-30px-bottom sm-margin-25px-bottom border-radius-6" />
                                <img src="~/clientcss/img/content/about03.jpg" alt="" class="border-radius-6" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- end about us section -->
    <!-- start course area section -->
    <section class="courses-area">
        <div class="container">
            <div class="row">
                <div class="col-12 center-col margin-50px-bottom md-margin-40px-bottom text-center">
                    <h3 class="font-weight-500 font-size32 md-font-size28 sm-font-size26 xs-font-size24 section-title">Our Courses</h3>
                    <div class="title-border"><span class="lg"></span><span class="md"></span><span class="sm"></span></div>
                </div>
            </div>
            <div class="courses-list">
                <div class="owl-carousel owl-theme">
                    @foreach (var temp in Model.courses)
                    {
                        <div class="courses-box" style="height:500px">
                            <div class="courses-pic position-relative">
                                <a asp-action="CourseDetails" asp-controller="Home"><img src="~/@temp.CourseImg" alt="" /></a>
                            </div>
                            <div class="course-main-content">
                                <div class="courses-desc last-paragraph-no-margin">
                                    <div class="courses-title">
                                        <h4 class="font-size22 md-font-size20 sm-font-size18 margin-5px-bottom font-weight-500"><a asp-action="CourseDetails" asp-controller="Home" class="text-theme-color">@temp.CourseName</a></h4>
                                    </div>
                                    <p class="font-size15 xs-font-size14 line-height-28">@temp.CourseDesc </p>
                                </div>
                            </div>
                            <div class="card-footer media bg-white align-items-center justify-content-between">
                                <ul class="list-unstyled mb-0">
                                    <li class="">
                                        <i class="ti-time mr-2"></i> @temp.CourseDuration
                                    </li>
                                </ul>
                                <h4 class="text-right no-margin-bottom">
                                    <span>$180</span>
                                </h4>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
    <!-- end course area section -->
    <section>
        <div class="container">
            <div class="row">
                <div class="col-12 center-col margin-50px-bottom sm-margin-40px-bottom text-center">
                    <h3 class="font-weight-500 font-size32 md-font-size28 sm-font-size26 xs-font-size24 section-title">Our Facilities</h3>
                    <div class="title-border"><span class="lg"></span><span class="md"></span><span class="sm"></span></div>
                </div>
            </div>
            <div class="row">
                @foreach (var temp in Model.Facilities)
                {
                    <div class="col-lg-6 margin-30px-bottom xs-margin-25px-bottom">
                        <div class="events-block bg-light-gray height-100 border-radius-6">
                            <div class="col-left">
                                <div class="position-relative overflow-hidden">
                                    <img src="@temp.FacilityImg" alt="">
                                </div>
                            </div>
                            <div class="col-right">
                                <div class="padding-30px-lr xs-padding-20px-lr xs-padding-20px-tb display-table-cell vertical-align-middle height-100">
                                    <div class="margin-20px-bottom md-margin-15px-bottom">
                                        <h4 class="margin-5px-bottom font-size22 md-font-size20 xs-font-size18 font-weight-500"><a href="event-details.html" class="text-theme-color">@temp.FacilityName</a></h4>
                                    </div>
                                    <p class="margin-20px-bottom md-margin-15px-bottom">@temp.FacilityDesc</p>

                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>





        </div>
    </section>
    <!-- end event section -->

    <!-- start our team section -->
    <section>
        <div class="container">
            <div class="row">
                <div class="col-12 center-col margin-50px-bottom sm-margin-40px-bottom text-center">
                    <h3 class="font-weight-500 font-size32 md-font-size28 sm-font-size26 xs-font-size24 section-title">Our Experience advisor</h3>
                    <div class="title-border"><span class="lg"></span><span class="md"></span><span class="sm"></span></div>
                </div>
            </div>
            <div class="row">
                @foreach (var temp in Model.faculties)
                    {
                            <div class="col-lg-4 sm-margin-30px-bottom xs-margin-25px-bottom">
                                <div class="team-block">
                                    <div class="team-image position-relative display-block overflow-hidden">
                                        <img src="~/@temp.FacultyImg" alt="" />
                                        <div class="overlay-box">
                                            <ul class="social-icons no-margin-bottom">
                                                <li><a href="javascript:void(0)"><span><i class="fab fa-facebook-f"></i></span></a></li>
                                                <li><a href="javascript:void(0)"><span><i class="fab fa-twitter"></i></span></a></li>
                                                <li><a href="javascript:void(0)"><span><i class="fab fa-youtube"></i></span></a></li>
                                                <li class="no-margin-right"><a href="javascript:void(0)"><span><i class="fab fa-linkedin-in"></i></span></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="team-info padding-20px-all xs-padding-15px-all text-center">
                                        <h5 class="font-size20 md-font-size18 text-theme-color margin-5px-bottom sm-no-margin-bottom"><a href="#" class="text-theme-color">@temp.FacultyName</a></h5>
                                        <div class="team-position">@temp.FacultyDepartmentNavigation.DepartmentName</div>
                                    </div>
                                </div>
                            </div>
                        }
                
            </div>
        </div>
    </section>
    <!-- end our team section -->
</div>